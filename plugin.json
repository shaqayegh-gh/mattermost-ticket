{
    "id": "com.github.mattermost-ticket-plugin",
    "name": "Ticket",
    "description": "A plugin to create and manage tickets in Mattermost",
    "version": "1.0.0",
    "min_server_version": "7.0.0",
    "homepage_url": "https://github.com/shaqayegh-gh/mattermost-ticket",
    "support_url": "https://github.com/shaqayegh-gh/mattermost-ticket#support",
    "release_notes_url": "https://github.com/shaqayegh-gh/mattermost-ticket/releases",
    "icon_path": "assets/icon.svg",
    "server": {
        "executable": "server/dist/plugin-linux-amd64"
    },
    "settings_schema": {
        "header": "Configure your ticket plugin settings",
        "footer": "",
        "settings": [
            {
                "key": "EnableTicketCreation",
                "display_name": "Enable Ticket Creation",
                "type": "bool",
                "help_text": "Allow users to create tickets using the /ticket command",
                "default": true
            },
            {
                "key": "DefaultChannel",
                "display_name": "Allowed Channels for Tickets",
                "type": "longtext",
                "help_text": "Comma or newline separated list of channel names allowed to use /ticket. Leave empty to allow any channel.",
                "default": "tickets"
            },
            {
                "key": "TeamMembersConfig",
                "display_name": "Team Members Configuration",
                "type": "longtext",
                "help_text": "JSON configuration for team members. Format: {\"team_name\": [\"username1\", \"username2\"], \"all\": [\"jack\", \"sara\"]}. The 'all' key will always be mentioned in every ticket.",
                "default": "{\"issuance\": [\"user1\", \"user2\"], \"all\": [\"jack\", \"sara\"]}"
            },
            {
                "key": "TeamOptionsConfig",
                "display_name": "Team Options (Dropdown)",
                "type": "longtext",
                "help_text": "JSON array to override team dropdown options. Format: [{\"Text\":\"Issuance\",\"Value\":\"issuance\"}]. If empty, built-in defaults are used.",
                "default": ""
            },
            {
                "key": "ProjectOptionsConfig",
                "display_name": "Project Options (Dropdown)",
                "type": "longtext",
                "help_text": "JSON array to override project dropdown options. Format: [{\"Text\":\"Estate API Backend\",\"Value\":\"estate-api-backend\"}]. If empty, built-in defaults are used.",
                "default": ""
            }
        ]
    }
}
